<div class="span10">
  <article lang="<%= post.lang || 'fr' %>">
    <header>
      <h1>
        <a href="<%= config.root %><%= post.path %>" title="<%= post.title %>" rel="bookmark"><%= post.title %></a>
      </h1>
    </header>

    <%- partial("post-cover", {post: post}) %>

    <div class="excerpt"><%- post.excerpt %></div>

    <ul class="metadata stacked stacked-horizontal">
      <li class="read-more">
        <%- link_to(config.root+post.path, "Lire la suite") %> <span class="icon-right-open"></span>
      </li>
    </ul>
  </article>
</div>